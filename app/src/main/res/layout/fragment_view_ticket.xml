<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.conornaylor.fyp.ViewTicketFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.conornaylor.fyp.ViewEventFragment">

        <ProgressBar
            android:id="@+id/view_ticket_progress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.19">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/enterEventFAB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="5dp"
                android:src="?android:attr/actionModePasteDrawable"
                app:backgroundTint="@android:color/background_light"
                app:layout_anchorGravity="bottom|right|end" />

            <ScrollView
                android:id="@+id/enterEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/_create_event_form"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageViewTicket"
                            android:layout_width="179dp"
                            android:layout_height="181dp" />

                        <LinearLayout
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/viewEventName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:fontFamily="sans-serif"
                                android:inputType="textPersonName"
                                android:text="Name"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textColor="@android:color/black"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/viewTicketDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:maxLines="4"
                                android:paddingTop="5dp"
                                android:text="Date"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/viewTicketSeat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:hint="@string/price"
                                android:inputType="number"
                                android:paddingTop="5dp"
                                android:text="Seat"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/viewTicketPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:hint="@string/price"
                                android:inputType="number"
                                android:paddingTop="5dp"
                                android:text="Price"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </GridLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp">

                        <ImageView
                            android:id="@+id/mapImage"
                            android:layout_width="64dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/map" />

                        <TextView
                            android:id="@+id/viewEventLocation"
                            android:layout_width="268dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Location"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="@android:color/black"
                            android:textSize="22sp" />

                    </GridLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/viewEventButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:drawableRight="@android:drawable/ic_menu_revert"
                            android:drawableTint="@android:color/background_dark"
                            android:elevation="0dp"
                            android:text="View Event" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </android.support.design.widget.CoordinatorLayout>


    </LinearLayout>

</FrameLayout>
